<h2><%= @user.first_name %>'s Music Buckets</h2>
<div class="container">

  <div class="row">

    <div class="col-sm-3 thumbnail bucketbox text-center"><span class="add-link"><%= link_to "+", user_buckets_path(@user) %></span></div>

    <% @buckets.each do |bucket| %>
    <div class="col-sm-3 thumbnail bucketbox text-center"><%= link_to bucket.name, bucket_path(bucket) %></div>
    <% end %>
   

  </div>
    
 </div>
